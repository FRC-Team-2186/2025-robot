# EditorConfig is awesome: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{java,json}]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2